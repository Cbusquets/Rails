<%= form_for(client, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/form_errors', errors: client.errors %>

  <div class='form-group'>
    <%= f.label :name, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :email, class: 'form-control', required: true %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :country, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :country, class: 'form-control', required: true %>
    </div>
  </div>


  <div class='actions col-sm-offset-2'>
    <%= f.submit 'Guardar', class: 'btn btn-default' %>
  </div>
<% end %>